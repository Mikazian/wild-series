{% extends 'base.html.twig' %}

{% block title %}Série #
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsys }}</p>
			<p>Catégorie :
				{{ program.category.name }}
			</p>
			<h2>
				Saison numéro
				{{ season.number }}
			</h2>
			<h3>Liste des épisodes</h3>
			<ul>
				{% for episode in episodes %}
					<li>
						<a href="{{ path('program_episode_show', { 'program': program.id, 'season': season.id, 'episode': episode.id }) }}">
							{{ episode.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>

	<a href="{{ path('program_show', { 'id': program.id }) }}">Retour</a>
{% endblock %}
