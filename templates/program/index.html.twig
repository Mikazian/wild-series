{% extends 'base.html.twig' %}

{% block title %}Wild Series | Index
{% endblock %}

{% block body %}
	{{ parent()}}
	<h1>{{ website }}
		index</h1>

	<h1>Toutes les séries de la table program :</h1>
	{% for program in programs %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name  }}</h2>
			<p>{{ program.synopsys }}</p>
		</div>
		<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
	{% else %}
		Aucune séries trouvée.
	{% endfor %}

	<br>
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a><br>
	<img src="{{ asset('build/path_to_image.png') }}" alt=""/>
{% endblock %}
