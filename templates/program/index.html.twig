{% extends 'base.html.twig' %}

{% block title %}Season index
{% endblock %}

{% block body %}
	<h1 class="text-primary">Program index</h1>

	{{ parent ()}}

	<a href="{{ path('program_new') }}">Create new</a>


	<table class="table text-light">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Year</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for program in programs %}
				<tr>
					<td>{{ program.id }}</td>
					<td>{{ program.title }}</td>
					<td>{{ program.year }}</td>
					<td>{{ program.synopsys }}</td>
					<td>
						<a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
						<a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
